%p= link_to t('.new_freebie'), new_freeby_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for freeby in @freebies
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), freeby
        %td.action= link_to t('edit'), edit_freeby_path(freeby)
        %td.action= link_to t('destroy'), freeby, :confirm => t('are_you_sure'), :method => :delete
