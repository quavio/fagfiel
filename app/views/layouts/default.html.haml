- content_for :default do
  #header
    #top
      #connected_as
        %div
          = link_to "#{current_user.name} (#{t("roles." + current_user.role).downcase})", edit_user_path(current_user)
          |
          = link_to t("links.sign_out"), destroy_user_session_path, :class => "sign_out"
      = link_to image_tag("ina-fag.png", :id => "ina-fag"), "http://www.schaeffler.com/content.schaeffler.com.br/pt/ina_fag_products/index.jsp", :target => "_blank"
      = link_to image_tag("imdepa.png", :id => "imdepa"), "http://imdepa.com.br/", :target => "_blank"
    .clear
    = render :partial => "shared/#{current_user.role}_menu"
  %h1= yield(:title)
  #default
    - if flash[:notice]
      %p.notice= flash[:notice]
    - if flash[:alert]
      %p.alert= flash[:alert]
    - if content_for?(:submenu)
      .submenu
        = yield :submenu
    = yield
= render :file => 'layouts/application'
